{
  "env": {
    "node": true,
    "es2022": true
  },
  "rules": {
    "no-console": ["warn", { "allow": ["error", "warn", "info"] }],
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "drizzle/",
    "*.config.ts"
  ]
}
